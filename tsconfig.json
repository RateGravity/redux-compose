{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "esnext",
    "moduleResolution": "node",
    "sourceMap": false,
    "outDir": "dist",
    "baseUrl": ".",
    "strict": true,
    "noUnusedLocals": true,
    "paths": {
      "*": ["node_modules/*", "types/*"]
    },
    "declaration": true,
    "resolveJsonModule": true
  },
  "include": ["src/**/*"]
}
